            <li><a href="#" class="footer-link"><%= lang === 'ar' ? 'شروط الاستخدام' : 'Terms of Service' %></a></li>
          </ul>
        </div>
        
        <div class="footer-section">
          <h3 class="footer-title"><%= lang === 'ar' ? 'تصنيفات' : 'Categories' %></h3>
          <ul class="footer-links">
            <li><a href="#" class="footer-link"><%= lang === 'ar' ? 'دراجات رياضية' : 'Sport Bikes' %></a></li>
            <li><a href="#" class="footer-link"><%= lang === 'ar' ? 'دراجات كروزر' : 'Cruiser Bikes' %></a></li>
            <li><a href="#" class="footer-link"><%= lang === 'ar' ? 'دراجات نايكد' : 'Naked Bikes' %></a></li>
            <li><a href="#" class="footer-link"><%= lang === 'ar' ? 'دراجات مغامرات' : 'Adventure Bikes' %></a></li>
